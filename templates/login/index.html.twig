{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!
{% endblock %}

{% block body %}
	{% if error %}
		<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
	{% endif %}
    <h1>Connexion</h1>
	<form action="{{ path('app_login') }}" method="post" class="container">
		<div class="row">
			<label for="username" class="form-label">Email:</label>
			<input type="text" id="username" name="_username" value="{{ last_username }}" class="col-4"/>
		</div>
		<div class="row">
			<label for="password" class="form-label gy-3">Password:</label>
			<input type="password" id="password" name="_password" class="col-4"/>
		</div>
		{# If you want to control the URL the user is redirected to on success
				        <input type="hidden" name="_target_path" value="/account"/> #}
		<div class="row">
			<button type="submit" class="btn btn-primary col-1 gy-3">login</button>
		</div>
	</form>
{% endblock %}
